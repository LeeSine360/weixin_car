.content_list{
  display: flex;
  justify-content: space-between;
  color: #2F2A42;
  width: 100%;
  margin: 10rpx;
  align-items: center;
}
.content_list_item{
  display: flex;  
  align-items: center;
  border:solid 1rpx #D2D2D2;
  padding-right: 20rpx;
  width: 320rpx;
}
.content_list_item_bordright{
  border-right: solid 1rpx #D2D2D2;
  padding-right: 20rpx;
}
.content_list_item input{
  width: 300rpx;
  padding: 10rpx;
  text-align: center
}
.content_list_item text{
  color: #D2D2D2
}
.content_list_name{
  display: flex;
  flex-direction: row;
}
.content_list_item_border_color {
  border: solid 1rpx #123456;
}