.sm_body{
  position: fixed;
  bottom: -500rpx;
  z-index: 80
}
.sm_container{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 620rpx;
  background-color: #413e4e;
  margin: 0
}
.sm_img{
  display: flex;
  width: 60rpx;
  height: 60rpx;
  float: right;
}
.sm_title{
  margin: 40rpx 40rpx 10rpx;
  font-size: 30rpx;
  color: #fff;
  width: 80%;
}
.sm_text{
  display: flex;
  align-items: center;
  width: 80%;
  margin: 20rpx 0;
  background-color: #fff;
  padding: 10rpx;
}
.sm_text textarea{
  height: 200rpx;
}
.sm_button{
  width: 240rpx;
}

/**自定义弹窗**/
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  font-size: 32rpx;
}
.modal-content {
  display: flex;
  flex-direction: row;
  padding: 50rpx 32rpx;
  align-items: center;
  justify-content: center;
}
.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  font-size: 38rpx;
  width: 160rpx;
  align-items: center;
  margin-left: 20rpx;
}
.modal-input-unit{
  color: #ddd;
  padding-right: 20rpx;
}
.modal-input input {
  width: 100%;
  height: 82rpx;
  font-size: 38rpx;
  line-height: 38rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}
.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}
.modal-btn-confirm {
  width: 100%;
  color: #fff;
  background-color: #2f2a42;
  text-align: center;
}
/**自定义弹窗结束**/